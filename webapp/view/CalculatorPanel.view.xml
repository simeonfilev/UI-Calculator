<mvc:View
	controllerName="sap.ui.acad.calculator.controller.CalculatorPanel"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel
		class="sapUiResponsiveMargin"
		width="auto">
		<content>
		<FormattedText
				htmlText="Answer: {/calculator/answer}"
				class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"
				width="95%"
				id="answer"/>
			<Input
				value="{/calculator/expression}"
				valueLiveUpdate="true"
				width="82%"/>
			<Button
				text="{i18n>calculate}"
				press=".calculate"
				class="myCustomButton"/>
		</content>
	</Panel>
	<Panel
		class="sapUiResponsiveMargin"
		width="auto">
		<content>
			<Button
				text="1"
				press=".addToExpression"
				class="myCustomButton"
				width="30%"
				/>
			<Button
				text="2"
				press=".addToExpression"
				class="myCustomButton"
				width="30%"/>
			<Button
				text="3"
				press=".addToExpression"
				class="myCustomButton"
				width="30%"/>
			<Button
				text="4"
				press=".addToExpression"
				class="myCustomButton"
				width="30%"/>
			<Button
				text="5"
				press=".addToExpression"
				class="myCustomButton"
				width="30%"/>
			<Button
				text="6"
				press=".addToExpression"
				class="myCustomButton"
				width="30%"/>
			<Button
				text="7"
				press=".addToExpression"
				class="myCustomButton"
				width="30%"/>
			<Button
				text="8"
				press=".addToExpression"
				class="myCustomButton"
				width="30%"/>
			<Button
				text="9"
				press=".addToExpression"
				class="myCustomButton"
				width="30%"/>
			<Button
				text="("
				press=".addToExpression"
				class="myCustomButton"
				width="30%"/>
			<Button
				text="0"
				press=".addToExpression"
				class="myCustomButton"
				width="30%"/>
			<Button
				text=")"
				press=".addToExpression"
				class="myCustomButton"
				width="30%"/>
			<Button
				text="+"
				press=".addToExpression"
				class="myCustomButton"
				width="22.5%"/>
			<Button
				text="-"
				press=".addToExpression"
				class="myCustomButton"
				width="22.5%"/>
			<Button
				text="/"
				press=".addToExpression"
				class="myCustomButton"
				width="22.5%"/>
			<Button
				text="*"
				press=".addToExpression"
				class="myCustomButton"
				width="22.5%"/>
		</content>
	</Panel>

</mvc:View>
